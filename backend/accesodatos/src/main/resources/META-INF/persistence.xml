<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="ormprueba">
      <jta-data-source>java:/jboss/datasources/Proyecto</jta-data-source>

        <class>ucab.dsw.entidades.Usuario</class>
        <class>ucab.dsw.entidades.Cliente</class>
        <class>ucab.dsw.entidades.Encuestado</class>
        <class>ucab.dsw.entidades.PreguntaEncuesta</class>
        <class>ucab.dsw.entidades.Telefono</class>

        <class>ucab.dsw.entidades.Pais</class>
        <class>ucab.dsw.entidades.Municipio</class>
        <class>ucab.dsw.entidades.Parroquia</class>
        <class>ucab.dsw.entidades.NivelEstudio</class>

        <class>ucab.dsw.entidades.Categoria</class>
        <class>ucab.dsw.entidades.Subcategoria</class>
        <class>ucab.dsw.entidades.Marca</class>

        <class>ucab.dsw.entidades.NivelSocioeconomico</class>
        <class>ucab.dsw.entidades.SolicitudEstudio</class>
        <class>ucab.dsw.entidades.Estudio</class>
        <class>ucab.dsw.entidades.Encuesta</class>
        <class>ucab.dsw.entidades.Muestra</class>

        <class>ucab.dsw.entidades.Pregunta</class>
        <class>ucab.dsw.entidades.Opcion</class>
        <class>ucab.dsw.entidades.PreguntaOpcion</class>
        <class>ucab.dsw.entidades.PreguntaEncuesta</class>

      <class>ucab.dsw.entidades.Respuesta</class>
      <class>ucab.dsw.entidades.RespuestaOpcion</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/proyecto?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="sasa"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="eclipselink.logging.level" value="FINE"/>
          <property name="eclipselink.ddl-generation" value="create-tables" />
        </properties>
    </persistence-unit>

</persistence>
